<h1>Round Statistics: </h1>

<div class="row">
  <% @all_rounds.each_with_index do |round, index| %>
    <div class="col-xs-6 col-md-3 thumbnail">
      <h2>Round: <%= index + 1 %></h2>
      <p>Number Incorrect: <%= round.number_incorrect %></p>
      <p>Number Correct: <%= round.number_correct %></p>
      <p>Total Number: <%= round.total_number %></p>
      <p>Percentage Correct: <%= round.percentage_correct %>%</p>
    </div>
  <% end %>
</div>

<ul class="pager">
  <li class="previous"><a href="/user/<%= current_user.id %>">All Decks &larr;</a></li>
</ul>
